{
  "schema": {
    "type": "app_blueprint",
    "version": {
      "major": 0,
      "minor": 1
    },
    "origin": "Engines Developer Studio 0.2"
  },
  "metadata": {
    "blueprint": {
      "version": {
        "major": 0,
        "minor": 1,
        "level": "alpha",
        "patch": 0
      }
    },
    "software": {
      "display": {
        "title": "ICEcoder",
        "label": "ICEcoder",
        "description": "ICEcoder is a browser based code editor, which provides a modern approach to building websites.",
        "url": "https://icecoder.net/"
      },
      "license": {
        "label": "ICE 14 day Trial ",
        "url": "https://icecoder.net/buy-code"
      }
    },
    "timestamp": "2018-12-19T10:56:51+11:00"
  },
  "software": {
    "base": {
      "name": "icecoder",
      "framework": "apache_php",
      "deployment_type": "web",
      "http_protocol": "http_and_https",
      "memory": {
        "required": 64,
        "recommended": 128
      }
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#/bin/bash\r\ncd /home/app\r\nif ! test -z $default_site\r\n  then\r\n    if test $default_site = website\r\n      then\r\n        cp .htaccess_website .htaccess\r\n     elif test $default_site = editor\r\n        then\r\n        cp .htaccess_editor .htaccess\r\n    fi\r\n fi\r\n"
      },
      "install": {
        "language": "sh"
      },
      "post_install": {
        "language": "sh"
      },
      "shutdown": {
        "language": "sh"
      }
    },
    "installed_packages": [
      {
        "name": "ICEcoder",
        "source_url": "https://github.com/mattpass/ICEcoder",
        "destination": "ICEcoder",
        "extraction_command": "git",
        "path_to_extracted": "ICEcoder"
      }
    ],
    "required_modules": [
      {
        "name": "rewrite",
        "type": "apache"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "_Engines_Builder(engine_name)",
          "group": "_Engines_Builder(group_uid)",
          "user": "_Engines_Builder(data_uid)",
          "volume_src": " ",
          "permissions": "rw",
          "engine_path": "/home/app/files"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/mysql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(mysql_host)",
          "db_username": "_Engines_Builder(engine_name)",
          "db_password": "_Engines_System(random(10))",
          "collation": "utf8_general_ci",
          "full_access": "0"
        }
      }
    ],
    "environment_variables": [
      {
        "name": "default_site",
        "value": "editor",
        "mandatory": true,
        "ask_at_build_time": true,
        "input": {
          "type": "select",
          "label": "default site",
          "title": "editor|website",
          "hint": "chose default site ICE editor or pages under site",
          "placeholder": "editor|website",
          "collection": {
            "include_blank": true,
            "items": {
              "editor": "Editor",
              "website": "Website"
            }
          }
        }
      }
    ],
    "template_files": [
      {
        "path": "/home/app/.htaccess_website",
        "language": "text",
        "content": "#make the website the default site\r\n#RedirectMatch 301 /(.*) /files/$1\r\nRewriteEngine On\r\nRewriteRule ^$ /files [L]\r\n"
      },
      {
        "path": "/home/app/.htaccess_editor",
        "language": "text",
        "content": "#make the editor the default site\r\n#RedirectMatch 301 /(.*) /ICEcoder/$1\r\nRewriteEngine On\r\nRewriteRule ^$ /ICEcoder [L]"
      }
    ],
    "database_seed": {
      "language": "text"
    },
    "file_write_permissions": [
      {
        "path": "ICEcoder/lib",
        "recursive": true
      },
      {
        "path": "ICEcoder/plugins"
      },
      {
        "path": "ICEcoder/tmp",
        "recursive": true
      },
      {
        "path": "ICEcoder/test"
      },
      {
        "path": "ICEcoder/backup"
      },
      {
        "path": ".htaccess"
      }
    ],
    "actionators": [
      {
        "name": "default_site",
        "label": "Set Default Site",
        "return_type": "none",
        "variables": [
          {
            "name": "default_site",
            "input": {
              "type": "select",
              "title": "Default Site",
              "collection": {
                "items": {
                  "editor": "Editor",
                  "website": "Website"
                }
              }
            }
          }
        ],
        "script": {
          "content": "#!/bin/sh\r\n\r\nif ! test -z $default_site \r\n then\r\n   if test $default_site = editor\r\n    then\r\n     cp .htaccess_website .htaccess\r\n   elif test $default_site = website\r\n    then\r\n     cp .htaccess_editor .htaccess\r\n   fi\r\nfi   "
        }
      }
    ]
  }
}
